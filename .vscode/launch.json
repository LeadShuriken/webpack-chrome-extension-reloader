    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "LAUNCH BACKEND",
            "env": {
                "PORT": "3001"
            },
            "program": "${workspaceFolder}/click_bait_filter_be/index.js",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LAUNCH FRONTEND",
            "args": [
                "--config",
                "./webpack.config.js",
                "--mode=development",
                "--watch"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "LAUNCH SERVER/CLIENT",
            "configurations": [
                "LAUNCH BACKEND",
                "LAUNCH FRONTEND"
            ]
        }
    ]
}