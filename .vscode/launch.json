    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "LAUNCH BACKEND:STATIC",
            "env": {
                "SERVETYPE": "STATIC",
                "API_URL": "/api",
                "PORT": "4000"
            },
            "program": "${workspaceFolder}/click_bait_filter_be/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LAUNCH BACKEND:DEV",
            "env": {
                "API_URL": "/api",
                "PORT": "4000"
            },
            "program": "${workspaceFolder}/click_bait_filter_be/index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "LAUNCH FRONTEND",
            "args": [
                "--config",
                "./click_bait_filter_extension/webpack.plugin.js",
                "--mode=development",
                "--watch"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "LAUNCH SERVER/CLIENT",
            "configurations": [
                "LAUNCH BACKEND:DEV",
                "LAUNCH FRONTEND"
            ]
        }
    ]
}